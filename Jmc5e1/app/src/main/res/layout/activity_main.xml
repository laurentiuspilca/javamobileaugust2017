<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="android.telacad.ro.jmc5e1.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/images"
        android:id="@+id/imagine"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titlu"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/titlu_tw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagine" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlu_et"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/titlu_tw"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descriere"
        android:id="@+id/descriere_tw"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/titlu_et"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriere_et"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/descriere_tw"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regizor_tw"
        android:text="Regizor"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/descriere_et"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regizor_et"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/regizor_tw"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buton1"
        android:text="Add"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regizor_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buton2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buton2"
        android:text="View"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regizor_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buton1"/>



</android.support.constraint.ConstraintLayout>
