<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.telacad.ro.jmc2e3.MainActivity">

    <TextView
        android:id="@+id/txtIntrebare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 + 2 = ?"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/raspunsuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RadioButton
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf= "@+id/txtIntrebare"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="5" />
        <RadioButton
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf= "@+id/cb1"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="4" />
        <RadioButton
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf= "@+id/cb2"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="3"/>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlege"
        android:text="ALEGE"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf= "@+id/raspunsuri"/>

</android.support.constraint.ConstraintLayout>
